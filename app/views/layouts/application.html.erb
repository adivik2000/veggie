<!DOCTYPE html>
<html>
<head>
  <title>Veggie</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
	
	<div>
		Olet täällä: 
		<%= render_crumbs %>
	</div>
	
  <div id="nav">
		<% if current_user %>
			Hei <%= current_user.username %>! 
      <%= link_to "Muokkaa profiilia", edit_user_path(current_user.id)%>
			<%= link_to "Kirjaudu ulos", :logout %>
		<% else %>
    	<%= link_to "Register", new_user_path%>
			<%= link_to "Login", :login %>
		<% end %>
  </div>



<%= yield %>

</body>
</html>
