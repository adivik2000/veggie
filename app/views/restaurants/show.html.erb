<p id="notice"><%= notice %></p>



<p>
<h1><%= @restaurant.name %></h1>  <%= render :partial => "like", :locals => { :restaurant => @restaurant } %>
</p>

<!-- Branch address etc. partial here -->


<p>
  <b>Added by:</b>
  <% unless @restaurant.user == nil %>
    <%= @restaurant.user.username %>
  <% end %>
</p>

<p>
  <b>Website:</b>
  <%= @restaurant.website %>
</p>

<p>
  <b>Info:</b>
  <%= @restaurant.info %>
</p

<p>
  <b>Puhelin:</b>
  <%= @restaurant.branches[0].phone %>
</p

<p>
  <b>Ruoka:</b>
  <%= @food %>
  <b>Palvelu:</b>
  <%= @service %>
  <b>Miljöö:</b>
  <%= @environment %>
</p

<% if can? :create, Review %>
  <p>
    <%= link_to "Add review", new_restaurant_review_path(@restaurant) %>
  </p>
<% end %>

<p>
  <b>Portions:</b>
  <%= render :partial => 'portion', :collection => @restaurant.portions %>
</p>
<% if can? :create, Portion%>
  <p>
    <%= link_to 'Add portion', new_restaurant_portion_path(@restaurant)  %>
  </p>
<% end %>

<p>
  <b>Tags:</b>
  <!-- <%= @restaurant.tag_list %> -->

  <% tag_cloud(@tags, %w(css1 css2 css3 css4)) do |tag, css_class| %>
    <%= link_to tag.name, { :action => :tag, :id => tag.name }, :class => css_class %>
  <% end %>

  <%= form_tag({:controller => restaurants_path, :action => 'add_tags'}, :method => "get") do %>

    <%= label_tag(:taglist, "Add tags:") %>
    <%= text_field_tag(:taglist) %>
    <%= submit_tag("Add") %>
  <% end %>

</p>

<p>
  <b>Kommentit:</b>
  <%= render :partial => 'shared/comment', :collection => @restaurant.comments%>
</p>

<% if can? :create, Comment%>

  <p>  <%=link_to "Lisää kommentti", new_restaurant_comment_path(@restaurant)%> </p>
<%  end %>

<% if can? :edit, @restaurant %>
  <%= link_to 'Edit', edit_restaurant_path(@restaurant) %> |
<%  end %>
<%= link_to 'Back', restaurants_path %>
